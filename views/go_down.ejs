<html lang="en">
    <%-include('./partials/head')%>
  <body>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Roboto&display=swap');
        </style>
    <%- include('./partials/realnav.ejs')%>
    <div>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Items</th>
                <th scope="col">Company</th>
                <th scope="col">Quantity</th>
                <th scope="col">Price</th>
                <th scope="col">Unit</th>
                <th scope="col">Edit or add</th>
              </tr>
            </thead>
            <tbody>
            <% result.forEach((rows)=>{ %>
              <tr>
                <th scope="row"><%=rows.uid%></th>
                <td><%=rows.item%></td>
                <td><%=rows.company%></td>
                <td><%=rows.quantity%></td>
                <td><%=rows.price%></td>
                <td>/ <%=rows.unit%></td>
                <td><a class="btn btn-primary" href="/edit/<%=rows._id%>" role="button">Update</a></td>
              </tr>
              <%})%>
            </tbody>
          </table>
          <a class="btn btn-primary" href="/adding" role="button">Add</a>
    </div>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
