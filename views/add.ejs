    <%-include('./partials/head')%>
  <body>
    <%- include('./partials/realnav.ejs')%>
    <div class="mb-3" my="4">
        <span class="border">
    <form action="/phen68diloDI88r" method="POST">
        <div class="mb-3">
          <label for="item" class="form-label">Name</label>
          <input type="text" class="form-control" id="titleinput" placeholder="Cement" aria-describedby="title" name="item" required>
        </div>
        <div class="md-3">
          <label for="uid" class="form-label">UID</label>
          <input type="number" class="form-control" id="uid" placeholder="12345" name="uid" required>
          <div id="uidhelp" class="form-text">Provide a Unique ID for this product</div>
        </div>
        <div class="mb-3">
          <label for="company" class="form-label">Company</label>
          <input type="text" class="form-control" id="company" placeholder="Birla" aria-describedby="title" name="company" required>
        </div>
        <div class="col-md-3">
          <label for="quantity" class="form-label">Number if Items</label>
          <input type="number" class="form-control" id="quantity" placeholder="10000" name="quantity" required>
        </div>
        <br>
        <div class="col-md-3">
          <label for="price" class="form-label">Price</label>
          <input type="number" class="form-control" id="price" placeholder="10" name="price" required>
        </div>
        <br>
        <div class="col-md-3">
          <label for="unit" class="form-label">Unit</label>
          </div>
          <div class="row g-3 align-items-center">
            <div class="col-auto">
              <label for="unit" class="col-form-label">/</label>
            </div>
            <div class="col-auto">
              <input type="text" id="unit" class="form-control" placeholder="Kg" aria-describedby="unit" name="unit" required>
            </div>
            </div>
          </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </span>
    </div>

